rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    match /pocketbooks/{pocketbookId} {
      allow read, write: if debug(pocketbookId) && request.auth != null &&
      (
        request.auth.uid == get(/databases/$(database)/documents/pocketbooks/$(pocketbookId)).data.owner ||
        request.auth.uid in get(/databases/$(database)/documents/pocketbooks/$(pocketbookId)).data.collaboratorList
      );
    }

    match /pocketbooks/{pocketbookId}/transactions/{transactionId} {
      allow read, write: if request.auth != null &&
      (
        request.auth.uid == get(/databases/$(database)/documents/pocketbooks/$(pocketbookId)).data.owner ||
        request.auth.uid in get(/databases/$(database)/documents/pocketbooks/$(pocketbookId)).data.collaboratorList
      );
    }
  }
}
